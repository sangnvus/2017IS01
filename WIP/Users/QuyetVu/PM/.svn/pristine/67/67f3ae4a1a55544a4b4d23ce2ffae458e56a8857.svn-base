<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" 
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"  lang="#{languageBean.language}"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:p="http://primefaces.org/ui">
<f:view locale="#{languageBean.locale}">
	<h:head>
		<title><ui:insert name="title">T.NET</ui:insert></title>
		<link rel="shortcut icon" type="image/x-icon"
			href="#{request.contextPath}/resources/images/logo-s.png" />
		<script type="text/javascript">
		function redirect(ref) {
			window.location.href = ref;
		}
		function start() {
			PF('statusDialog').show();
		}

		function stop() {
			PF('statusDialog').hide();
		}
	</script>
	</h:head>

	<h:body>
		<h:outputStylesheet library="css" name="main.css" />
		<p:layout fullPage="true">
			<p:layoutUnit position="west" size="220" minSize="202" gutter="0"
				collapsible="true" styleClass="leftmenu-layout">
				<f:facet name="header">
					<img src="../../resources/images/ic-menu.png" class="header-img" />
					<p:outputLabel styleClass="leftmenu-header"
						value="#{msg['label.menu']}" />
				</f:facet>
				<ui:insert name="leftmenu">
					<p>Menu Left content</p>
				</ui:insert>
			</p:layoutUnit>
			<p:layoutUnit id="main123" position="center">
				<ui:insert name="staffheader">
					<p>Driver Header</p>
				</ui:insert>
				<ui:insert name="menubar">
					<p>Menu Bar</p>
				</ui:insert>
				<ui:insert name="content">
					<p>Put default content here, if any.</p>
				</ui:insert>
				<div id="footer" class="footer">
					<ui:insert name="footer">
						<p>Footer</p>
					</ui:insert>
				</div>
			</p:layoutUnit>
		</p:layout>

		<p:ajaxStatus onstart="PF('statusDialog').show()"
			onsuccess="PF('statusDialog').hide()" />
		<p:dialog widgetVar="statusDialog" appendTo="@(body)" modal="true"
			showHeader="false" draggable="false" closable="false"
			resizable="false">
			<img src="../../resources/images/ajax-loader.gif" />
		</p:dialog>
		<p:confirmDialog global="true">
			<center>
				<p:commandButton value="#{msg['confirmDialogAccept']}" type="button"
					icon="fa fa-check" styleClass="ui-confirmdialog-yes" />
				<p:commandButton value="#{msg['confirmDialogDenied']}" type="button"
					icon="fa fa-close" styleClass="ui-confirmdialog-no nextSib" />
			</center>
		</p:confirmDialog>
	</h:body>
</f:view>
<script type="text/javascript"
	src="#{request.contextPath}/resources/js/main.js"></script>
</html>